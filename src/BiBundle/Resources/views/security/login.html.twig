{% extends '::welcome.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/bi/system/plugins/iCheck/square/blue.css') }}">
{% endblock %}

{% block body %}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Project</b>Management</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Войти</p>

        {{ form_start(form) }}
            <div class="form-group has-feedback">
                {{ form_widget(form.username) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.password) }}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            {% if error %}
                <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false"
                                 style="position: relative;">
                                <input type="checkbox"
                                       style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background-color: rgb(255, 255, 255); border: 0px; opacity: 0; background-position: initial initial; background-repeat: initial initial;">
                                <ins class="iCheck-helper"
                                     style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background-color: rgb(255, 255, 255); border: 0px; opacity: 0; background-position: initial initial; background-repeat: initial initial;"></ins>
                            </div>
                            Запомнить меня
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    {{ form_row(form.submit) }}
                </div>
                <!-- /.col -->
            </div>
        {{ form_end(form) }}

        <a href="#">Я забыл свой пароль</a><br>
        <a href="{{ path('register') }}" class="text-center">Зарегистрироваться</a>

    </div>
    <!-- /.login-box-body -->
</div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/bi/js/jquery.validate.min.js') }}"></script>
{% endblock %}