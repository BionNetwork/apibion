{% extends 'base.html.twig' %}

{% block header_content %}
    Карточки
{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Author</th>
            <th>Type</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td>{{ card.name }}</td>
                <td>{{ card.description }}</td>
                <td>{{ card.rating }}</td>
                <td>{{ card.author }}</td>
                <td>{{ card.type }}</td>
                <td>{{ card.price }}</td>
                <td>
                    <a href="{{ path('card_edit', { 'id': card.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('card_new') }}" class="btn btn-default">Create a new entry</a>
{% endblock %}
