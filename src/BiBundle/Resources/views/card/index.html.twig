{% extends 'base.html.twig' %}

{% block body %}
    <h1>Card list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Description_long</th>
            <th>Rating</th>
            <th>Author</th>
            <th>Image</th>
            <th>Carousel</th>
            <th>Type</th>
            <th>Price</th>
            <th>Createdon</th>
            <th>Updatedon</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td>{{ card.name }}</td>
                <td>{{ card.description }}</td>
                <td>{{ card.descriptionlong }}</td>
                <td>{{ card.rating }}</td>
                <td>{{ card.author }}</td>
                <td>{{ card.image }}</td>
                <td>{{ card.carousel }}</td>
                <td>{{ card.type }}</td>
                <td>{{ card.price }}</td>
                <td>{% if card.createdOn %}{{ card.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if card.updatedOn %}{{ card.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('card_edit', { 'id': card.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('card_new') }}" class="btn btn-default">Create a new entry</a>
{% endblock %}
