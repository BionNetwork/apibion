{% extends 'base.html.twig' %}

{% block body %}
    <h1>Filter control type list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>
                    {{ type.id }}
                </td>
                <td>{{ type.name }}</td>
                <td>
                    <a href="{{ path('filter_control_type_edit', { 'id': type.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('filter_control_type_new') }}" class="btn btn-default">Create a new entry</a>

{% endblock %}
