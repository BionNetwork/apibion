{% extends 'base.html.twig' %}

{% block body %}
    <h1>Department list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td><a href="{{ path('department_show', { 'id': department.id }) }}">{{ department.id }}</a></td>
                <td>{{ department.name }}</td>
                <td>
                    <a href="{{ path('department_show', { 'id': department.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('department_edit', { 'id': department.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('department_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
