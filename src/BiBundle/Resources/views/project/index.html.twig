{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Full name</th>
                <th>Start Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{{ project.name }}</td>
                <td>{{ project.fullname }}</td>
                <td>{% if project.startDate %}{{ project.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a href="{{ path('project_show', { 'id': project.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('project_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
