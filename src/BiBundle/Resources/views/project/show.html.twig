{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
			<div class="box">
				<div class="box-header with-border">
					<h3 class="box-title">Проект</h3>
				</div>
				<div class="box-body">
					<table class="table table-bordered table-responsive">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ project.id }}</td>
							</tr>
							<tr>
								<th>Name</th>
								<td>{{ project.name }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ project.description }}</td>
							</tr>
							<tr>
								<th>Objective</th>
								<td>{{ project.objective }}</td>
							</tr>
							<tr>
								<th>Result</th>
								<td>{{ project.result }}</td>
							</tr>
							<tr>
								<th>Startdate</th>
								<td>{% if project.startDate %}{{ project.startDate|date('Y-m-d') }}{% endif %}</td>
							</tr>
							<tr>
								<th>Duedate</th>
								<td>{% if project.dueDate %}{{ project.dueDate|date('Y-m-d') }}{% endif %}</td>
							</tr>
							<tr>
								<th>Createdon</th>
								<td>{% if project.createdOn %}{{ project.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
							</tr>
							<tr>
								<th>Updatedon</th>
								<td>{% if project.updatedOn %}{{ project.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
							</tr>
							<tr>
								<th>Closedon</th>
								<td>{% if project.closedOn %}{{ project.closedOn|date('Y-m-d') }}{% endif %}</td>
							</tr>
							<tr>
								<th>Identifier</th>
								<td>{{ project.identifier }}</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="box-footer clearfix">
					<ul class="pull-right">
						<a class="btn btn-default" href="{{ path('project_index') }}">Back to the list</a>
						<a class="btn btn-primary" href="{{ path('project_edit', { 'id': project.id }) }}">Edit</a>
					</ul>
					{{ form_start(delete_form) }}
					<input id="project_delete_button" class="btn btn-danger pull-left" type="submit" value="Delete">
					{{ form_end(delete_form) }}
				</div>
			</div>
		</div>
	</div>
	{{ confirm('#project_delete_button') }}
{% endblock %}
