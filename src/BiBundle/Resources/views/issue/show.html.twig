{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Задача</h3>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-responsive">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ issue.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ issue.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ issue.description }}</td>
                        </tr>
                        <tr>
                            <th>Startdate</th>
                            <td>{% if issue.startDate %}{{ issue.startDate|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Duedate</th>
                            <td>{% if issue.dueDate %}{{ issue.dueDate|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Createdon</th>
                            <td>{% if issue.createdOn %}{{ issue.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Updatedon</th>
                            <td>{% if issue.updatedOn %}{{ issue.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Closedon</th>
                            <td>{% if issue.closedOn %}{{ issue.closedOn|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Estimatedhours</th>
                            <td>{{ issue.estimatedHours }}</td>
                        </tr>
                        <tr>
                            <th>Rootid</th>
                            <td>{{ issue.rootId }}</td>
                        </tr>
                        <tr>
                            <th>Lft</th>
                            <td>{{ issue.lft }}</td>
                        </tr>
                        <tr>
                            <th>Rgt</th>
                            <td>{{ issue.rgt }}</td>
                        </tr>
                        <tr>
                            <th>Level</th>
                            <td>{{ issue.level }}</td>
                        </tr>
                        <tr>
                            <th>Haschildren</th>
                            <td>{% if issue.hasChildren %}Yes{% else %}No{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer clearfix">
                <ul class="pull-right">
                    <a class="btn btn-default" href="{{ path('issue_index') }}">Back to the list</a>
                    <a class="btn btn-primary" href="{{ path('issue_edit', { 'id': issue.id }) }}">Edit</a>
                </ul>
                {{ form_start(delete_form) }}
                <input id="delete_button" class="btn btn-danger pull-left" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
