{% extends 'base.html.twig' %}

{% block body %}
    <h1>Issue list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Startdate</th>
                <th>Duedate</th>
                <th>Createdon</th>
                <th>Updatedon</th>
                <th>Closedon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
            <tr>
                <td><a href="{{ path('issue_show', { 'id': issue.id }) }}">{{ issue.id }}</a></td>
                <td>{{ issue.name }}</td>
                <td>{% if issue.startDate %}{{ issue.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if issue.dueDate %}{{ issue.dueDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if issue.createdOn %}{{ issue.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if issue.updatedOn %}{{ issue.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if issue.closedOn %}{{ issue.closedOn|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a href="{{ path('issue_show', { 'id': issue.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('issue_edit', { 'id': issue.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('issue_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
